{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name":"Python: build_examples.py",
            "type":"python",
            "request":"launch",
            "program":"scripts/build/build_examples.py",
            "console":"integratedTerminal",
            "args": ["--no-log-timestamps", "--platform", "android", "build"]
        },
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "mbedDebugProfile",
            "description": "What mbed profile do you want to debug?",
            "options": ["debug", "develop"],
            "default": "debug"
        },
        {
            "type": "pickString",
            "id": "mbedFlashProfile",
            "description": "What mbed profile do you want to flash?",
            "options": ["release", "debug", "develop"],
            "default": "release"
        },
        {
            "type": "pickString",
            "id": "mbedApp",
            "description": "What mbed application do you want to use?",
            "options": ["lock-app", "lighting-app"],
            "default": "shell"
        }
    ]
}
